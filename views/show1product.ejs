<%- include('header')%>

<!-- המוצר -->
<form action="/show1product/Addto" method="post">
    <% products.forEach(function(product) { %>
      
        <h2 class="product-name" id="head"><%= product.name %></h2>
        <div class="row" id="product">
        <div class="col-sm-8">
        <div class="desc">
        <div class="details">
        <p >Price: $<%= product.price %></p>
        <p >Quantity: <%= product.quantity %></p>
        <p >Category: <%= product.category %></p>

        
      </div>
        </div>
        </div>
       
      <div class="col-sm-8">
        <div class="cont">
            <% if (product.picture) { %>
          <img width="300px" height="300px" class="product-image" src="<%= product.picture %>" alt="<%= product.name %> Image" />
        <% }
         else { %>
          <p>No image available</p>
        <% } %>
        
        </div></div></div>
        <div class="row">
        <div class="col-sm-8" id="product">
            <div class="btn-group">
            <button name="action" type="submit" class="btn btn-sm btn-dark rounded-start-pill" value="cart:<%= product.name %>">Add To Cart</button>
            <button name="action" type="submit" class="btn btn-sm btn-white btn-outline-dark rounded-end-circle">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-suit-heart-fill" viewBox="0 0 16 16">
                <path d="M4 1c2.21 0 4 1.755 4 3.92C8 2.755 9.79 1 12 1s4 1.755 4 3.92c0 3.263-3.234 4.414-7.608 9.608a.513.513 0 0 1-.784 0C3.234 9.334 0 8.183 0 4.92 0 2.755 1.79 1 4 1z" />
              </svg>
            </button>
        </div>
    </div>
    </div>
       
        
      
    <% }); %>
  </form>







<%- include('footer')%>